{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@core": ["./src/core"],
      "@core/*": ["./src/core/*"],
      "@surface/*": ["./src/surface/*"],
      "@foundation/*": ["./src/foundation/*"],
      "@widget": ["./src/widget"],
      "@widget/*": ["./src/widget/*"],
      "@garden/*": ["./src/garden/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}